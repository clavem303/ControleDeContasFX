<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>
<?import org.kordamp.ikonli.javafx.FontIcon?>

<VBox xmlns="http://javafx.com/javafx/21" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="tech.clavem303.controller.DialogoSairController"
      style="-fx-background-color: white; -fx-background-radius: 10; -fx-border-radius: 10; -fx-effect: dropshadow(three-pass-box, rgba(0,0,0,0.4), 20, 0, 0, 0);"
      prefWidth="450">

    <HBox fx:id="headerPane" alignment="CENTER_LEFT" spacing="15"
          style="-fx-background-color: #D32F2F; -fx-background-radius: 10 10 0 0; -fx-padding: 20;">
        <FontIcon iconLiteral="fas-sign-out-alt" iconColor="white" iconSize="32"/>
        <Label text="Encerrar Sistema" style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: white;"/>
    </HBox>

    <VBox spacing="15" style="-fx-padding: 30;">
        <Label text="Deseja realmente sair?"
               style="-fx-font-size: 20px; -fx-font-weight: 900; -fx-text-fill: #37474F;"/>

        <Label text="Todas as alterações não salvas já foram gravadas automaticamente pelo sistema." wrapText="true"
               style="-fx-font-size: 15px; -fx-text-fill: #78909C;"/>
    </VBox>

    <HBox spacing="15" alignment="CENTER_RIGHT" style="-fx-padding: 0 30 30 30; -fx-background-radius: 0 0 10 10;">
        <Button text="Cancelar" onAction="#fecharDialogo" cancelButton="true"
                style="-fx-background-color: #ECEFF1; -fx-text-fill: #546E7A; -fx-font-weight: bold; -fx-background-radius: 5; -fx-padding: 10 20; -fx-cursor: hand; -fx-font-size: 14px;"/>

        <Button text="Sim, Sair" onAction="#confirmarSaida" defaultButton="true"
                style="-fx-background-color: #D32F2F; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 5; -fx-padding: 10 20; -fx-cursor: hand; -fx-effect: dropshadow(three-pass-box, rgba(211, 47, 47, 0.3), 10, 0, 0, 4); -fx-font-size: 14px;">
            <graphic>
                <FontIcon iconLiteral="fas-power-off" iconColor="white" iconSize="14"/>
            </graphic>
        </Button>
    </HBox>

</VBox>